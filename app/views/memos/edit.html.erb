<% provide(:title, 'Edit Memo') %>
<h1>メモ編集修正</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @memo, url: user_memo_path(@user, @memo), method: :patch, local: true) do |f| %>
          
          
          <%= f.label :title, class: "label-signup" %>
          <%= f.text_field :title, class: "form-control" %>
            
          <%= f.label :note, class: "label-signup" %>
          <%= f.text_area :note, class: "form-control" %>

          
          <%= f.submit "更新", class:"btn btn-primary btn-form" %>
          <%= link_to "キャンセル", user_memo_path, class: "btn btn-default btn-form" %>
    <% end %>
  </div>
</div>