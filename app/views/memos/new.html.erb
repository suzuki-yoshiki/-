<% provide(:title, 'New Memo') %>
<h1>新規メモ作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @memo, url: user_memos_path(@user), method: :post, local: true) do |f| %>
      
      <%= f.label :title, "タイトル", class: "label-signup" %>
      <%= f.text_field :title, class: "form-control" %>
      
      <%= f.label :note, "内容", class: "label-signup" %>
      <%= f.text_area :note, class: "form-control" %>
      
      
      <%= f.submit "メモ作成", class:"btn btn-lg btn-primary btn-block btn-signup" %>
      <% end %>
     
  </div>
</div>