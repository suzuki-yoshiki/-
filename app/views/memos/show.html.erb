<% provide(:title, 'Show Memo') %>
<h1>メモ詳細</h1>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-bordered" id="table-users">
        <tr>
          <th class="active col-md-2">ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th class="active">タイトル</th>
          <td><%= @memo.title %></td>
        </tr>
        <tr>
          <th class="active">内容</tf>
          <td><%= @memo.note %></td>
        </tr>
        <tr>
          <th class="active">作成日</th>
          <td><%= l(@memo.created_at, format: :long) %></td>
        </tr>
        <tr>
          <th class="active">更新日</th>
          <td><%= l(@memo.updated_at, format: :long) %></td>
        </tr>
      </table>
      <%= link_to "編集", edit_user_memo_path, class: "btn btn-lg btn-success" %>
      <%= link_to "削除", user_memo_path, method: :delete, class: "btn btn-lg btn-danger",
          data: { confirm: "#{@memo.title}を削除してもよろしいですか？"} %>
    </div>    
　</div>
</div>
